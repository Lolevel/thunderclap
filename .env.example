# ========================================
# Prime League Scout - Central Configuration
# ========================================
# Copy this file to .env and fill in your values

# Environment Mode: "development" or "production"
PROJECT_ENV=development

# Domain Configuration
# For development: use localhost
DOMAIN_FRONTEND=localhost:5173
DOMAIN_BACKEND=localhost:5000

# For production: uncomment and use your actual domains
# DOMAIN_FRONTEND=thunderclap.lolevel.de
# DOMAIN_BACKEND=api.lolevel.de/thunderclap

# ========================================
# Secrets (REQUIRED)
# ========================================
RIOT_API_KEY=your-riot-api-key-here
SECRET_KEY=your-secret-key-change-in-production

# ========================================
# Database Configuration
# ========================================
POSTGRES_DB=pl_scout
POSTGRES_USER=pl_scout_user
POSTGRES_PASSWORD=pl_scout_password

# ========================================
# Riot API Configuration
# ========================================
RIOT_REGION=europe
RIOT_PLATFORM=euw1
RIOT_RATE_LIMIT_PER_SECOND=20
RIOT_RATE_LIMIT_PER_TWO_MINUTES=100

# ========================================
# Optional: Cache Configuration
# ========================================
CACHE_ENABLED=false
